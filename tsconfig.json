{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "outDir": "build",
    "removeComments": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
		"importHelpers": true,
  },
  "include": ["src"],
  "exclude": ["node_modules", "build"]
}
